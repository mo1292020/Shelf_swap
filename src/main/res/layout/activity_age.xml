<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <Button
        android:id="@+id/age_goBack"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="@color/background"
        android:layout_alignParentStart="true"
        android:drawableEnd="@drawable/icon_left_arrow"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        />


    <FrameLayout
        android:id="@+id/age_frameScrollview"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/age_goBack"
        >
        <ImageView
            android:id="@+id/age_scrollviewWhite"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/scrollview"
            />

        <ImageView
            android:id="@+id/age_scrollviewOrange"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/scrollvieworange"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/age_header"
        android:layout_below="@+id/age_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what is your age?"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/age_headerHint"
        android:layout_below="@+id/age_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select age range for better content."
        android:layout_margin="15dp"
        android:textSize="15sp" />


    <RadioGroup
        android:id="@+id/age_radioGroup1"
        android:layout_below="@id/age_headerHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >


        <LinearLayout
            android:id="@+id/age_linearlayoutRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/age_age1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="14-17"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/age_age3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="25-29"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />


        <RadioButton
            android:id="@+id/age_age5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="35-39"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />


        <RadioButton
            android:id="@+id/age_age7"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="45-49"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/age_linearlayoutRow2" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/age_age2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="18-24"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />

        <RadioButton
            android:id="@+id/age_age4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="30-34"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />


        <RadioButton
            android:id="@+id/age_age6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text="40-44"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />


        <RadioButton
            android:id="@+id/age_age8"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_unselected"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:text=">=50"
            android:textAlignment="center"
            android:button="@null"
            android:layout_margin="20dp"
            />

        </LinearLayout>

    </RadioGroup>


    <Button
        android:id="@+id/gender_continueButton"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Continue"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange"
        android:drawableEnd="@drawable/icon_right_arrow"
        />

</RelativeLayout>
